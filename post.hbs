{{!< default}}

{{> navigation}}

<main id="container" role="main">
<p> DOES THIS WORK. PLEASE TELL ME IT WORKS </p>
    {{> sidebar}}	

    <section class="posts" data-filled="true">
        {{#post}}
        <article class="{{post_class}} post-full">
            <header class="post-header">
                <h2>{{{title}}}</h2>  
                
                <div class="post-meta">
                    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>{{#if tags}} on {{tags}}{{/if}}
                </div>            
            </header>
            
            <section class="post-content">
                {{content}}
            </section>
        </article>    
        
        <section itemscope itemprop="author" itemtype="http://schema.org/Person" class="author-profile">
            <div class="author-image">
                <div itemprop="image" class="author-image-inner" style="background-image: url({{author.image}});"></div> 
            </div>
            <div class="author-bio">
                <div itemprop="name" class="author-name">{{author.name}}</div>
                <div itemprop="description" class="author-bio-text">{{{author.bio}}}</div>
            </div>
        </section>  
        
        <section class="share-buttons">                
            <div class="share-buttons-title">Share this post</div>
            <a class="icon icon-twitter" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"
                onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-twitter"></i>
            </a>
            <a class="icon icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-facebook"></i>
            </a>
            <a class="icon icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
               onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-google-plus"></i>
            </a>              
        </section>  
        
        <div class="clearfix"></div> 
        
        {{/post}}
            
        {{>comments}}
    </section>
</main>